
<section id="schedule">
  <div class="separator">
    <h2><a href="#schedule" class="scrolly-link">Schedule</a></h2>
  </div>
  <div class="content">
  	{{#each schedule}}
  		<div class="day" id="{{day}}">
  			<h3 class="day-name"><a href="#{{day}}">{{day}}</a></h3>
  			{{#each events}}
  				<div class="event">
  					<p>{{name}}</p>
  					<p>{{time}}</p>
  					<p>{{location}}</p>
  					{{#if location-link}}
  						<p>{{location-link}}</p>
  					{{/if}}
  				</div>
  			{{/each}}
  		</div>
  	{{/each}}
	</div>
</section>
